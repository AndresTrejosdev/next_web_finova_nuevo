FROM node:18-alpine

WORKDIR /home/node/app

# Copiar package files
COPY package.json package-lock.json ./

# Install ALL dependencies (needed for build)
RUN npm ci

# Copiar código
COPY . .

# Build para producción
RUN npm run build

# Exponer puerto
EXPOSE 5122

# Comando de producción (NO dev)
CMD ["npm", "start", "--", "-p", "5122"]
